        </Button>
        <Button x:Name="friends_inform" Content="Friends Information" HorizontalAlignment="Left" Margin="224.681,145,0,0" VerticalAlignment="Top" Width="217" Height="66" FontFamily="Monotype Corsiva" FontSize="24" FontWeight="Bold" Grid.Column="1" Click="friends_inform_btn_click">
