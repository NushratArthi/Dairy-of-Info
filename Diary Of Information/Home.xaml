                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3973A" Offset="0"/>
                    <GradientStop Color="#FFECBD8E" Offset="1"/>
                </LinearGradientBrush>
