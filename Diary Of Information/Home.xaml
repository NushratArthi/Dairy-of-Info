        </Button>
        <Button x:Name="delete" Content="Delete" HorizontalAlignment="Left" Margin="499.681,339,0,0" VerticalAlignment="Top" Width="198" Height="60" FontFamily="Monotype Corsiva" FontSize="24" FontWeight="Bold" Grid.Column="1">
