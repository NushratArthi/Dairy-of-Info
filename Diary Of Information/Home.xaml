                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF14141" Offset="0"/>
                    <GradientStop Color="#FFEE9898" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="log_out" Content="Log Out" HorizontalAlignment="Left" Margin="695.681,23,0,0" VerticalAlignment="Top" Width="93" Height="31" FontFamily="Monotype Corsiva" FontSize="20" Background="#FFE0C3FD" BorderBrush="#FF8618F3" Foreground="Red" FontWeight="Bold" Grid.Column="1" Click="log_out_click"/>

    </Grid>
</Window>
